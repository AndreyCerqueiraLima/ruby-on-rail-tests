= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|

  .form-outline.mb-4
    = f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control"
    %label.form-label{for: "registerEmail"} Email

  .form-outline.mb-4
    = f.password_field :password, autocomplete: "new-password", id: "registerPassword", class:"form-control"
    %label.form-label{for: "registerPassword"} Password

  .form-outline.mb-4
    = f.password_field :password_confirmation, autocomplete: "new-password", id: "registerRepeatPassword", class:"form-control"
    %label.form-label{for: "registerRepeatPassword"} Repeat password

  = f.submit "Sign up", class:" btn btn-primary btn-block mb-3"